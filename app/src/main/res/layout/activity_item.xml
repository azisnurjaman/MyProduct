<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <EditText
            android:id="@+id/NamaProduk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Produk"
            android:textSize="15dp" />

        <RadioGroup
            android:id="@+id/jenisProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NamaProduk"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/Baju"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baju" />

            <RadioButton
                android:id="@+id/Celana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Celana" />
        </RadioGroup>

        <EditText
            android:id="@+id/Harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Harga Produk"
            android:inputType="number"
            android:textSize="15dp"
            android:layout_below="@+id/jenisProduk"/>

        <EditText
            android:id="@+id/Stok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Stok Produk"
            android:textSize="15dp"
            android:inputType="number"
            android:layout_below="@+id/Harga"/>

        <Button
            android:id="@+id/Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Stok"
            android:text="Submit"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </RelativeLayout>

</RelativeLayout>